@using ACG.SGLN.Lottery.Application.Reporting.Queries
@model PdfViewModel<List<RequestsReportDto>>
@{

}

<style type="text/css">
    tr, th, td {
        white-space: nowrap;
        word-wrap: break-word;
        text-align: center;
        font-size: 6px;
        word-break: break-all;
    }

    .pdf-report, .pdf-report tr, .pdf-report th {
        border: 1px solid #222;
    }
    .pdf-label {
        color: #333;
        font-weight: bold;
    }

    .pdf-value {
        font-style: normal;
    }

    .pdf-section-title {
        text-transform: uppercase;
        font-weight: bold;
        font-size: 12px;
        padding: 15px 0px 5px 0px;
    }

    .pdf-report {
        width: 100%;
    }

    .pdf-report th {
        color: white;
        background-color: rgb(0, 109, 49);
    }

    .report-header .report-footer {
        visibility: hidden !important;
    }
</style>

<table>
    <tbody>
        <tr>
            <td colspan="2" style="text-align:center; font-weight:bolder;font-size:14px;">Rapport du nombre total de demandes</td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="pdf-report">
                    <thead>
                        <tr>
                            <th>N &deg;</th>
                            <th>Détaillant</th>
                            <th>Nature</th>
                            <th>Catégorie</th>
                            <th>Object</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    @{int i = 1;}
                    @foreach (var request in Model.Data)
                    {
                <tr>
                    <td>@i</td>
                    @{i++;}
                    <td>@request.Retailer</td>
                    <td>@request.CountByNature</td>
                    <td>@request.CountByCaytegory</td>
                    <td>@request.CountByObject</td>
                    <td>@request.CountByRetailer</td>
                </tr>
                    }
                </table>
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold" colspan="3">TOTAL @(i-1)</td>
        </tr>
    </tbody>
</table>
