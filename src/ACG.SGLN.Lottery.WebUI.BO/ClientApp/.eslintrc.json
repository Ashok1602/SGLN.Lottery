{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "no-console": 2,
        "no-process-env": "off",
        "react/display-name": "off",
        "max-len": ["error", { "code": 200, "ignoreTrailingComments": true }],
        "max-lines": ["error", {"max": 600, "skipComments": true, "skipBlankLines": true}]
    }
}